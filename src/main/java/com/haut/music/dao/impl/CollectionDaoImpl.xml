<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haut.music.dao.CollectionDao">

	<insert id="insert"
		parameterType="com.haut.music.model.Collection">
		insert into collection(userId,songId) values(#{userId},#{songId})
	</insert>
	
	<delete id="deleteById" parameterType="int">
		delete from collection where collectionId=#{collectionId}
	</delete>
	
	<select id="selectByCollection" parameterType="com.haut.music.model.Collection"
		resultType="com.haut.music.model.Collection">
		select * from collection where userId=#{userId} and songId=#{songId}
	</select>
	
	<select id="selectAll"
		resultType="com.haut.music.model.Collection">
		select * from collection
	</select>
	

</mapper>